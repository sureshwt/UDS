<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UtileDigitalSecurity</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    <style>
        navbar-brand {
            padding: 7px 15px !important
        }

        .brand-icon {
            padding: 7px 12px;
        }

        .narbar-cls {
            min-height: 50px;
        }

        .brand-title {
            font-size: 12px;
        }

        .logout-btn {
            padding: 5px 15px;
            margin: 10px 13px;
            float: right;
            height: 16px;
            width: 16px;
        }

        .nav-logo {
            margin: 0 !important;
        }

        .img-cls {
            width: 170px;
        }

        .content-div {
            width: 987px !important;
        }

        .btn-color {
            color: white !important;
        }

        .menu-cls {
            background-color: white;
            cursor: pointer;
            font-size: 14px;
            border-left: 1px solid lightgray;
            color: #9d9d9d !important;
            width: 170px;
            text-align: center;
        }

        .color-cls:hover {
            color: #9d9d9d !important;
        }

        .border-rg {
            border-right: 1px solid lightgray;
        }

        .active, .menu-cls:hover {
            background-color: #666;
            color: white;
        }

        .navbar-nav > li > a {
            padding-top: 19px;
            padding-bottom: 19px;
            font-size: 13px;
            font-weight: 300;
            letter-spacing: 0.5px;
        }

        .logout-block {
            display: flex;
            float: right;
        }

        .user-name {
            margin-top: 17px;
            font-size: 16px;
            color: #2E3034;
        }

        nav ul li a {
            text-decoration: none;
            color: #222;
            background-color: white !important;
            padding: 4px 5px;
        }

        .active {
            background-color: #2E3034 !important;
            color: white !important;
        }

        .navbar {
            position: fixed;
            z-index: 99;
        }

        .body-content {
            width: 970px !important;
        }
    </style>
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("li [href]").each(function () {
                event.preventDefault();
                if (this.href == window.location.href) {
                    $('.color-cls').removeClass('active');
                    $(this).addClass("active");
                }
            });
        });
    </script>

</head>
<body>
    <nav class="navbar navbar-fixed-top" style="border: 1px solid lightgray">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand brand-icon"><img src="~/images/Logo.png" height="40" /></a>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="menu-cls"><a asp-area="" asp-controller="Home" asp-action="Index">APP VIEW</a></li>
                    <li class="menu-cls"><a asp-area="" asp-controller="Home" asp-action="AllAppHistory">ACCESS HISTORY</a></li>
                    <li class="menu-cls"><a asp-area="" asp-controller="User" asp-action="Index">USERS</a></li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer>
            <p>&copy; 2019 - UtileDigitalSecurity</p>
        </footer>*@
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
